generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("PRISMA_URL")
}

model User2 {
  userId String @id @unique
  money Int @default(1000)
  experience Int @default(0)
  level Int @default(1)
  lastSale DateTime @default(now()) // !! THIS IS USED TO CALCULATE HOW MUCH MONEY THE USER WILL MAKE ON THE NEXT SALE, EXPLANATION IN README.md !!

  @@map("users_2")
}